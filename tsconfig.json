
{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "strictNullChecks": true,
        "typeRoots": ["src/types/",],
        "types": [
            "jest",
            "mocha",
            "node",
            "express",
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/public"
    ]
}